<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dhiraj.dreamyou.SixthActivity"
    tools:showIn="@layout/app_bar_sixth">


    <TextView
        android:id="@+id/textViewSummaryRecordCount"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0 record found"
        android:padding="5dp" />

    <!--
    <Button
        android:id="@+id/buttonCreateTodaycat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Create Todaycat" />
        -->


    <ScrollView
        android:id="@+id/scrollViewSummaryRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewSummaryRecordCount"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/textViewSummaryRecordCount" >

        <LinearLayout
            android:id="@+id/linearLayoutSummaryRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:paddingBottom="40dp"
            android:orientation="vertical" >

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
